{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/**/*", "chat-ui/app/page.tsx", "chat-ui/app/api/chat/route.ts", "chat-ui/src/services/ai"],
  "exclude": ["node_modules"]
} 